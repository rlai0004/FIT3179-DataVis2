{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Student and Univeristy Numbers by Country",
    "width": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/rlai0004/FIT3179-DataVis2/main/data/2023_rankings.csv"
    },
    "params": [
        {
            "name": "region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Africa",
                    "Americas",
                    "Asia",
                    "Europe",
                    "Oceania"
                ],
                "labels": [
                    "All",
                    "Africa",
                    "Americas",
                    "Asia",
                    "Europe",
                    "Oceania"
                ],
                "name": "Region: "
            }
        }
    ],
    "transform": [
        {
            "filter": "region_selection == null || datum.region == region_selection"
        },
        {
            "aggregate": [
                {
                    "op": "distinct",
                    "field": "name",
                    "as": "universities"
                },
                {
                    "op": "sum",
                    "field": "stats_number_students",
                    "as": "students"
                }
            ],
            "groupby": [
                "location",
                "region"
            ]
        },
        {
            "lookup": "location",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/rlai0004/FIT3179-DataVis2/main/data/2023_population.csv"
                },
                "key": "Country",
                "fields": [
                    "Population"
                ]
            }
        },
        {
            "calculate": "datum.students / datum.universities",
            "as": "Students per University"
        },
        {
            "calculate": "datum.students / datum.Population * 10000",
            "as": "Students per 10,000 Population"
        }
    ],
    "encoding": {
        "x": {
            "field": "universities",
            "type": "quantitative",
            "title": "Universities"
        },
        "y": {
            "field": "students",
            "type": "quantitative",
            "title": "Students"
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "color": {
                    "field": "region",
                    "type": "nominal",
                    "title": "Region",
                    "scale": {
                        "domain": [
                            "Africa",
                            "Americas",
                            "Asia",
                            "Europe",
                            "Oceania"
                        ],
                        "range": [
                            "#FFA500",
                            "#228B22",
                            "#FF0000",
                            "#0000FF",
                            "#008080"
                        ]
                    }
                },
                "opacity": {
                    "value": 0.6
                },
                "size": {
                    "field": "Population",
                    "type": "quantitative",
                    "title": "Population",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,
                            10000000,
                            50000000,
                            100000000,
                            500000000
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "tooltip": [
                    {
                        "field": "location",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "region",
                        "type": "nominal",
                        "title": "Region"
                    },
                    {
                        "field": "universities",
                        "type": "quantitative",
                        "title": "Universities",
                        "format": ","
                    },
                    {
                        "field": "students",
                        "type": "quantitative",
                        "title": "Students",
                        "format": ","
                    },
                    {
                        "field": "Students per University",
                        "type": "quantitative",
                        "format": ",.2f"
                    },
                    {
                        "field": "Population",
                        "type": "quantitative",
                        "format": ","
                    },
                    {
                        "field": "Students per 10,000 Population",
                        "type": "quantitative",
                        "format": ",.2f"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12
            },
            "encoding": {
                "text": {
                    "field": "location",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "value": 0,
                    "condition": {
                        "test": "datum.location == 'Egypt' || datum.location == 'China' || datum.location == 'United States of America' || datum.location == 'United Kingdom' || datum.location == 'Australia'",
                        "value": 1
                    }
                }
            }
        }
    ]
}