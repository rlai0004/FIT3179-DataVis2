{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Regional Variation in University Rankings",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/rlai0004/FIT3179-DataVis2/main/data/2023_rankings.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.rank_order < 1000000"
    },
    {
      "calculate": "datum.rank_order / 10",
      "as": "rank_order"
    }
  ],
  "mark": {
    "type": "boxplot",
    "median": {
      "color": "black"
    },
    "ticks": {
      "color": "black"
    }
  },
  "encoding": {
    "x": {
      "field": "region",
      "type": "nominal",
      "title": "Region"
    },
    "y": {
      "field": "rank_order",
      "type": "quantitative",
      "title": "Ranking"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {
        "domain": [
          "Africa",
          "Americas",
          "Asia",
          "Europe",
          "Oceania"
        ],
        "range": [
          "#FFA500",
          "#228B22",
          "#FF0000",
          "#0000FF",
          "#008080"
        ]
      },
      "title": "Region"
    }
  }
}