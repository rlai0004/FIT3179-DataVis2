{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Prop. Distribution of University Rankings",
  "width": "container",
  "params": [
    {
      "name": "select",
      "select": "point"
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/rlai0004/FIT3179-DataVis2/main/data/2023_rankings.csv",
    "format": {
      "type": "csv",
      "parse": {
        "rank_order": "number",
        "rank_max": "number",
        "region": "string"
      }
    }
  },
  "transform": [
    {
        "calculate": "datum.rank_order / 10",
        "as": "rank_order"
    },
    {
      "filter": "datum.rank_order <= 1501"
    },
    {
      "calculate": "datum.rank_order < 50 ? '1-50' : datum.rank_order < 100 ? '51-100' : datum.rank_order < 500 ? '101-500' : datum.rank_order < 1000 ? '501-1,000' : '1,000+'",
      "as": "rank_threshold"
    },
    {
      "calculate": "datum.rank_order < 50 ? 1 : datum.rank_order < 100 ? 2 : datum.rank_order < 500 ? 3 : datum.rank_order < 1000 ? 4 : 5",
      "as": "rank_threshold_order"
    },
    {
      "aggregate": [
        {
          "op": "distinct",
          "field": "name",
          "as": "universities"
        },
        {
          "op": "sum",
          "field": "stats_number_students",
          "as": "students"
        }
      ],
      "groupby": [
        "region",
        "rank_threshold",
        "rank_threshold_order"
      ]
    }
  ],
  "mark": {
    "type": "bar",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "region",
      "type": "nominal",
      "title": "Region"
    },
    "y": {
      "field": "universities",
      "type": "quantitative",
      "stack": "normalize",
      "title": "Universities"
    },
    "color": {
      "field": "rank_threshold",
      "legend": {
        "title": "Ranking"
      },
      "scale": {
        "domain": [
          "1-50",
          "51-100",
          "101-500",
          "501-1,000",
          "1,000+"
        ],
        "range": [
          "#FFD700",
          "#C0C0C0",
          "#FFA07A",
          "#ADD8E6",
          "#FF6347"
        ]
      }
    },
    "order": {
      "field": "rank_threshold_order",
      "sort": "descending"
    },
    "tooltip": [
      {
        "field": "rank_threshold",
        "type": "nominal",
        "title": "Rank Threshold"
      },
      {
        "field": "universities",
        "type": "quantitative",
        "title": "Universities",
        "format": ",.0f"
      },
      {
        "field": "students",
        "type": "quantitative",
        "title": "Students",
        "format": ",.0f"
      }
    ],
    "fillOpacity": {
      "condition": {
        "param": "select",
        "value": 1
      },
      "value": 0.3
    }
  }
}